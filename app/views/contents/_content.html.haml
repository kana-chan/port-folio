.works__contentsBox
  .works__contentsBox__photoBlock
    =image_tag(content.topImage.to_s)
    .works__contentsBox__photoBlock--filter.filter
      =content.name
  .works__contentsBox__textBlock
    .works__contentsBox__textBlock__left
      .works__contentsBox__textBlock__left--name
        =content.catchcopy
      %table.works__contentsBox__textBlock__left__info
        %tr
          %th DATE
          %td="#{content.created_at.strftime('%Y.%m')}"
        %tr
          %th LANGUAGE
          %td 
            -content.categories.each do|language|
              ="#{language.name}"
    .works__contentsBox__textBlock__right
      =link_to(content_path(content.id)) do
        .works__contentsBox__textBlock__right__moreBtn.linkBtn
          %p DITAIL
          .works__contentsBox__textBlock__right__moreBtn--icon.arrow
            =fa_icon "long-arrow-right"
.separateLine

