=link_to(content_path(content.id))do
  .works__contentsBox
    =image_tag content.image.to_s,class:"works__contentsBox__photoBlock"
    .works__contentsBox__textBlock
      .works__contentsBox__textBlock--contentHedding
        = content.name
      .works__contentsBox__textBlock__categoryWrapper
        - content.categories.each do |category|
          .works__contentsBox__textBlock__categoryWrapper--category{style:"background-color:#{category.color.insert(-1,"80")}"}
            = category.name
      .works__contentsBox__textBlock--contentText
        = content.text
