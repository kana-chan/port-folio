#show
  .upperBlock
    .upperBlock__name
      =@content.name
    .upperBlock__overview
      =image_tag(@content.topImage.to_s)
  .middleBlock
    .middleBlock--contentBox
      =@content.topText
  .lowerBlock
    .lowerBlock__imagesBlock
      .lowerBlock__imagesBlock--bigDisplay
        .lowerBlock__imagesBlock--bigDisplay--wrapper
          - @content.infomations.each_with_index do |info,i|
            =image_tag(info.image.to_s,class:"image#{i}")
      .lowerBlock__imagesBlock--smallDisplay
        - @content.infomations.each_with_index do |info,i|
          .lowerBlock__imagesBlock--smallDisplay--wrapper
            =image_tag(info.image.to_s,class:"image#{i}")
  -# ================================================
  =render "/templates/footer"